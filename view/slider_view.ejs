<%- include('header') %>
    <div class="dashboard-wrapper">
        <div class="container-fluid  dashboard-content">
            <!-- ============================================================== -->
            <!-- pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="page-header">
                        <h2 class="pageheader-title">Slider </h2>
                        <% if(locals.flash.success && locals.flash.success.length > 0) {%>
                            <div class="alert alert-success">
                                <%= locals.flash.success %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end pageheader -->
            <!-- ============================================================== -->
            <div class="row">
                <!-- ============================================================== -->
                <!-- basic table  -->
                <!-- ============================================================== -->
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <form action="">
                                    <div class="d-flex my-3">
                                        <input class="form-control" name="search" type="text" placeholder="Search..">
                                        <input type="submit" value="search" name="searching" class="mx-2">
                                    </div>
                                </form>
                                <form method="post" action="/slider/mulDel">
                                    <table class="table table-striped table-bordered first text-center">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <input type="checkbox"  id="multidelet">
                                                    <input type="submit" value="delet">
                                                </th>
                                                <th>Title</th>
                                                <th>Content</th>
                                                <th>image</th>
                                                <th>operation</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for(var dt of data){ %>
                                                <tr>
                                                    <td><input type="checkbox" name="mulDel[]" class="singleDelet" value="<%= dt.id %>"></td>
                                                    <td>
                                                        <%=dt.title%>
                                                    </td>
                                                    <td>
                                                        <%=dt.content%>
                                                    </td>
                                                    <td><img src="<%=dt.image%>" height="50" width="50"></td>
                                                    <td>
                                                        <a href="/slider/delet/<%= dt.id %>"><i
                                                                class="fa-solid fa-trash "
                                                                style="font-size: 20px; margin-right: 8px;"></i></a>
                                                        <a href="/slider/edit_page/<%= dt.id %>"><i
                                                                class="fa-solid fa-pen-to-square"
                                                                style="font-size: 20px; margin-right: 8px;"></i></a>
                                                        <!-- Active -->
                                                        <% if(dt.isActive){ %>
                                                            <a
                                                                href="?id=<%= dt.id %>&status=deActive&search=<%= search %>&page=<%= cpage %>"><i
                                                                    class="fa-regular fa-circle-check"
                                                                    style="color: rgb(101, 187, 16); font-size: 20px;"></i></a>
                                                            <% }else{ %>
                                                                <!-- deActive -->
                                                                <a
                                                                    href="?id=<%= dt.id %>&status=Active&search=<%= search %>&page=<%= cpage %>"><i
                                                                        class="fa-regular fa-circle-check"
                                                                        style="font-size: 20px;"></i> </a>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th></th>
                                                <th>title</th>
                                                <th>content</th>
                                                <th>image</th>
                                                <th>operation</th>
                                            </tr>
                                            <tr>
                                                <td colspan="5">
                                                    <% var pagenum = cpage %>
                                                    <% var pre = --pagenum %>

                                                        <% if(pre>0) {%>
                                                            <a href="?page=<%= pre %>&search=<%= search %>">prev </a>
                                                        <% } %>
                                                        
                                                        <a href="<%= cpage %>&search=<%= search %>"><%=cpage%></a>
                                                        
                                                        <% var next = ++cpage %>

                                                        <% if(cpage<=pageNum){ %>
                                                            <a href="?page=<%= next %>&search=<%= search %>">next </a>
                                                        <% } %>
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- end basic table  -->
                <!-- ============================================================== -->
            </div>
        </div>
        <%- include('footer') %>